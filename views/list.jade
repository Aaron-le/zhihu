extends layout

block append head
    link(rel='stylesheet', href='/css/index/index.css')

block content
    div.list
        if list.length>0
            each item in list
                p.article 
                a(href="http://daily.zhihu.com/story/#{item.id}") #{item.title}
                img(src="http://ccforward.sinaapp.com/api/proxy.php?url=#{item.image}")
        else
            h1 木有知乎

block append footer
    script(src="/js/index.js")
