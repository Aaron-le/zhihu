ul,li {
  padding 0
  margin 0
}
body {
  margin 0
  padding 0
  height 100%
}
#forkme_banner {
  display block
  position absolute
  top 0
  right 10px
  z-index 10
  padding 10px 50px 10px 10px
  color #fff
  background url(https://github.com/themes/slate/images/blacktocat.png) #0090ff no-repeat 95% 50%
  font-weight 700
  box-shadow 0 0 10px rgba(0,0,0,0.5)
  border-bottom-left-radius 2px
  border-bottom-right-radius 2px
}

#app {
  display flex
  align-items center
  justify-content center
  padding-top 80px
  color #2c3e50
  background-color #fff
  font-family Lucida Grande,Helvetica Neue,Helvetica,Arial,Hiragino Sans GB,Hiragino Sans GB W3,WenQuanYi Micro Hei,Microsoft YaHei UI,Microsoft YaHei,sans-serif
  font-size 15px
  background-color #f2f3f5
  .view {
    padding 0 25px
    width 750px
    background #fff
  }
}

.global-header {
  width: 100%;
  position: fixed;
  top: 0;
  height: 60px;
  background-color: #42b983;
  z-index: 1000;
  .wrap {
    width: 800px;
    margin: auto;
    line-height: 60px;
  }
  img {
    display: inline-block;
    width: 126px;
    height: 42px;
    vertical-align: middle;
  }
  .power {
    float: right;
    margin: 0;
    color: #fff;
  }
}
a {
  color #42b983
  text-decoration none
  &:hover {
    text-decoration underline
  }
}

.fade-enter-active, .fade-leave-active {
  transition all .2s ease
}
.fade-enter, .fade-leave-active {
  opacity 0
}